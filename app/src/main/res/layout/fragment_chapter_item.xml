<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="chapter"
            type="com.lucas.historygreatests.models.Chapter" />
    </data>

    <RelativeLayout
        android:id="@+id/root_view"
        style="@style/HorizontalLinearItemStyle"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        clipToOutline="@{true}">

        <RelativeLayout
            android:id="@+id/colored_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            backgroundColor="@{chapter.imageColor}"
            android:transitionName="image_background">

            <ImageView
                android:id="@+id/image"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:scaleType="fitEnd"
                imageUrl="@{chapter.imageUrl}"
                android:transitionName="image_view"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.44"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@{chapter.title}"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{chapter.description}"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>